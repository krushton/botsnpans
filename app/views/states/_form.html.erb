<%= form_for(@state) do |f| %>
  <% if @state.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@state.errors.count, "error") %> prohibited this state from being saved:</h2>

      <ul>
      <% @state.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :position %><br />
    <%= f.number_field :position %>
  </div>
  <div class="field">
    <%= f.label :state_category_id %><br />
    <%= collection_select(:state, :state_category_id, StateCategory.all, :id, :name, :prompt => true) %>
  </div>
  <div class="field">
    <%= f.label :first_parent_state_id %><br />
    <%= collection_select(:state, :first_parent_state_id, State.all, :id, :name, :prompt => true) %>
  </div>
  <div class="field">
    <%= f.label :second_parent_state_id %><br />
    <%= collection_select(:state, :second_parent_state_id, State.all, :id, :name, :prompt => true) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
